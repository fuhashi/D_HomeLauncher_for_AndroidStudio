
<jp.co.disney.apps.managed.kisekaeapp.launcher.NameEditView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res/jp.co.disney.apps.managed.kisekaeapp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/test_base"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="18dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/name_edit_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <jp.co.disney.apps.managed.kisekaeapp.launcher.NameEditText
            android:id="@+id/nmae_edit"
            style="@style/EditTextCustom"
            android:layout_width="168dp"
            android:layout_height="35dp"
            android:textSize="14sp"
            android:textColor="#ff2e2e2e"
            android:textColorHighlight="#ffff27a6"
            android:singleLine="true"
            android:imeOptions="flagNoExtractUi"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:textCursorDrawable="@drawable/cursor_name_edit" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

      <jp.co.disney.apps.managed.kisekaeapp.launcher.ClickableImageButton
          android:id="@+id/name_edit_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_apprename_cancel" />

      <jp.co.disney.apps.managed.kisekaeapp.launcher.ClickableImageButton
          android:id="@+id/name_edit_complete"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/btn_apprename_ok"
          android:layout_marginLeft="10dp" />

    </LinearLayout>

</jp.co.disney.apps.managed.kisekaeapp.launcher.NameEditView>